{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Oumi - Train - SFT",
            "type": "debugpy",
            "request": "launch",
            "module": "oumi",
            "args": [
                "train",
                "-c",
                "configs/recipes/smollm/sft/135m/train.yaml"
            ],
            "justMyCode": true
        },
        {
            "name": "Oumi - Train - DPO",
            "type": "debugpy",
            "request": "launch",
            "module": "oumi",
            "args": [
                "train",
                "-c",
                "configs/recipes/phi3/dpo/mac_train.yaml"
            ],
            "justMyCode": false
        },
        {
            "name": "Oumi - Judge",
            "type": "debugpy",
            "request": "launch",
            "module": "oumi",
            "args": [
                "judge",
                "--config-name",
                "oumi/v1_xml_local",
                "--dataset-name",
                "yahma/alpaca-cleaned"
            ],
            "justMyCode": true
        },
        {
            "name": "Oumi - Train - Multi-GPU",
            "type": "debugpy",
            "module": "torch.distributed.run",
            "request": "launch",
            "console": "integratedTerminal",
            "args": [
                "--standalone",
                "--nproc_per_node",
                "4",
                "-m",
                "oumi",
                "train",
                "-c",
                "configs/recipes/gpt2/pretraining/train.yaml"
            ]
        },
        {
            "name": "Oumi - Train - Accelerate",
            "type": "debugpy",
            "module": "accelerate.commands.launch",
            "request": "launch",
            "console": "integratedTerminal",
            "args": [
                "--num_machines",
                "1",
                "--machine_rank",
                "0",
                "--num_processes",
                "4",
                "--use_fsdp",
                "--config_file",
                "configs/recipes/llama3_1/sft/8b_full/accelerate.yaml",
                "-m",
                "oumi",
                "train",
                "-c",
                "configs/recipes/llama3_1/sft/8b_full/train.yaml",
                "training.max_steps=2",
                "training.save_steps=1",
                "training.save_final_model=true",
                "training.enable_wandb=false",
                "training.enable_tensorboard=false"
            ]
        },
        {
            "name": "Oumi - Inference",
            "type": "debugpy",
            "request": "launch",
            "module": "oumi",
            "args": [
                "infer",
                "--interactive",
                "-c",
                "configs/recipes/smollm/inference/135m_infer.yaml"
            ],
            "justMyCode": true
        },
        {
            "name": "Oumi - Evaluate - LM Harness",
            "type": "debugpy",
            "request": "launch",
            "module": "oumi",
            "args": [
                "evaluate",
                "-c",
                "configs/recipes/smollm/evaluation/135m_eval.yaml"
            ],
            "justMyCode": true
        },
        {
            "name": "Oumi - Experimental - Multimodal Inference",
            "type": "debugpy",
            "request": "launch",
            "module": "oumi",
            "args": [
                "infer",
                "--interactive",
                "--image",
                "tests/testdata/images/the_great_wave_off_kanagawa.jpg",
                "-c",
                "configs/examples/vision/llama3_2_vision/infer.yaml"
            ],
            "justMyCode": false
        },
        {
            "name": "Oumi - Experimental - Multimodal Training",
            "type": "debugpy",
            "request": "launch",
            "program": "scripts/benchmarks/minimal_multimodal_training.py",
            "args": [
                "--model-name",
                "llava-hf/llava-1.5-7b-hf",
                "--dataset-name",
                "merve/vqav2-small"
            ],
            "justMyCode": false
        },
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        }
    ]
}
