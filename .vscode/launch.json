{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Oumi - Train",
            "type": "debugpy",
            "request": "launch",
            "module": "oumi.train",
            "args": [
                "-c",
                "configs/oumi/phi3.lora.yaml"
            ],
            "justMyCode": true
        },
        {
            "name": "Oumi - Judge",
            "type": "debugpy",
            "request": "launch",
            "module": "oumi.judge",
            "args": [
                "--config-name",
                "oumi/v1_xml_local",
                "--dataset-name",
                "yahma/alpaca-cleaned"
            ],
            "justMyCode": true
        },
        {
            "name": "Oumi - Train - Multi-GPU",
            "type": "debugpy",
            "module": "torch.distributed.run",
            "request": "launch",
            "console": "integratedTerminal",
            "args": [
                "--standalone",
                "--nproc_per_node",
                "4",
                "-m",
                "oumi.train",
                "-c",
                "configs/oumi/gpt2.pt.yaml"
            ]
        },
        {
            "name": "Oumi - Train - Accelerate",
            "type": "debugpy",
            "module": "accelerate.commands.launch",
            "request": "launch",
            "console": "integratedTerminal",
            "args": [
                "--num_machines",
                "1",
                "--machine_rank",
                "0",
                "--num_processes",
                "4",
                "--use_fsdp",
                "--config_file",
                "configs/accelerate/llama.fsdp.yaml",
                "-m",
                "oumi.train",
                "-c",
                "configs/oumi/llama8b.sft.yaml",
                "training.max_steps=2",
                "training.save_steps=1",
                "training.save_final_model=true",
                "training.enable_wandb=false",
                "training.enable_tensorboard=false"
            ]
        },
        {
            "name": "Oumi - Inference",
            "type": "debugpy",
            "request": "launch",
            "module": "oumi.infer",
            "args": [
                "--interactive",
                "model.model_name=openai-community/gpt2",
                "model.trust_remote_code=true",
                "generation.max_new_tokens=16"
            ],
            "justMyCode": true
        },
        {
            "name": "Oumi - Evaluate - LM Harness",
            "type": "debugpy",
            "request": "launch",
            "module": "oumi.evaluate",
            "args": [
                "-c",
                "configs/oumi/phi3.eval.lm_harness.yaml"
            ],
            "justMyCode": true
        },
        {
            "name": "Oumi - Experimental - Multimodal Training",
            "type": "debugpy",
            "request": "launch",
            "program": "scripts/benchmarks/minimal_multimodal_training.py",
            "args": [
                "--model-name",
                "llava-hf/llava-1.5-7b-hf",
                "--dataset-name",
                "HuggingFaceH4/llava-instruct-mix-vsft"
            ],
            "justMyCode": true
        },
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        }
    ]
}
