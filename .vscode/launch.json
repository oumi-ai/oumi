{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "LeMa - Train Example",
            "type": "debugpy",
            "request": "launch",
            "module": "lema.train",
            "args": [
                "model_params.model_name=openai-community/gpt2",
                "data_params.dataset_name=yahma/alpaca-cleaned",
                "model_params.trust_remote_code=true",
                "data_params.preprocessing_function_name=alpaca",
                "training_params.output_dir=tmp",
                "data_params.trainer_kwargs.dataset_text_field=prompt"
            ],
            "justMyCode": true
        },
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        }
    ]
}
