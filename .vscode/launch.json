{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Oumi - Train",
            "type": "debugpy",
            "request": "launch",
            "module": "oumi",
            "args": [
                "train",
                "-c",
                "configs/recipes/llama3_2/sft/3b_lora/train.yaml"
            ],
            "justMyCode": true
        },
        {
            "name": "Oumi - Judge",
            "type": "debugpy",
            "request": "launch",
            "module": "oumi",
            "args": [
                "judge",
                "--config-name",
                "oumi/v1_xml_local",
                "--dataset-name",
                "yahma/alpaca-cleaned"
            ],
            "justMyCode": true
        },
        {
            "name": "Oumi - Train - Multi-GPU",
            "type": "debugpy",
            "module": "torch.distributed.run",
            "request": "launch",
            "console": "integratedTerminal",
            "args": [
                "--standalone",
                "--nproc_per_node",
                "4",
                "-m",
                "oumi",
                "train",
                "-c",
                "configs/recipes/gpt2/pretraining/train.yaml"
            ]
        },
        {
            "name": "Oumi - Train - Accelerate",
            "type": "debugpy",
            "module": "accelerate.commands.launch",
            "request": "launch",
            "console": "integratedTerminal",
            "args": [
                "--num_machines",
                "1",
                "--machine_rank",
                "0",
                "--num_processes",
                "4",
                "--use_fsdp",
                "--config_file",
                "configs/recipes/llama3_1/sft/8b_full/accelerate.yaml",
                "-m",
                "oumi",
                "train",
                "-c",
                "configs/recipes/llama3_1/sft/8b_full/train.yaml",
                "training.max_steps=2",
                "training.save_steps=1",
                "training.save_final_model=true",
                "training.enable_wandb=false",
                "training.enable_tensorboard=false"
            ]
        },
        {
            "name": "Oumi - Inference",
            "type": "debugpy",
            "request": "launch",
            "module": "oumi",
            "args": [
                "infer",
                "-c",
                "configs/recipes/gpt2/inference/infer.yaml"
            ],
            "justMyCode": true
        },
        {
            "name": "Oumi - Evaluate - LM Harness",
            "type": "debugpy",
            "request": "launch",
            "module": "oumi",
            "args": [
                "evaluate",
                "-c",
                "configs/recipes/llama3_2/evaluation/1b_eval.yaml"
            ],
            "justMyCode": true
        },
        {
            "name": "Oumi - Experimental - Multimodal Training",
            "type": "debugpy",
            "request": "launch",
            "program": "scripts/benchmarks/minimal_multimodal_training.py",
            "args": [
                "--model-name",
                "llava-hf/llava-1.5-7b-hf",
                "--dataset-name",
                "HuggingFaceH4/llava-instruct-mix-vsft"
            ],
            "justMyCode": true
        },
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        }
    ]
}
