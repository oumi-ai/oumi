# LoRA fine-tuning config for gpt-oss-20b
#
# Usage:
#   oumi train -c oumi://configs/recipes/gpt_oss/sft/20b_lora_train.yaml
#
# See Also:
#   - Documentation: https://oumi.ai/docs/en/latest/user_guides/train/train.html
#   - Config class: oumi.core.configs.TrainingConfig
#   - Other training configs: configs/**/sft/

model:
  model_name: "openai/gpt-oss-20b"
  torch_dtype_str: "bfloat16"
  trust_remote_code: true
  
  # MXFP4 quantization for efficient training
  model_kwargs:
    quantization_config:
      quant_method: "mxfp4"
      bits: 4
      group_size: 128

# Dataset configuration
data:
  train:
    datasets:
      - dataset_name: "oumi/ultrachat"

# Training parameters
training:
  trainer_type: "TRL_SFT"
  num_train_epochs: 3
  per_device_train_batch_size: 1
  gradient_accumulation_steps: 8
  learning_rate: 2e-5
  warmup_ratio: 0.03
  
  # Gradient checkpointing for memory efficiency
  enable_gradient_checkpointing: true
  gradient_checkpointing_kwargs:
    use_reentrant: false
  
  # Optimizer
  optimizer: "adamw_torch_fused"
  
  # Logging
  logging_steps: 10
  save_steps: 500
  
  # Output directory
  output_dir: "./outputs/gpt_oss_20b_lora"
  
  # Use PEFT for parameter-efficient fine-tuning
  use_peft: true

# Mixed precision training
bf16: true
tf32: true

# LoRA configuration
peft:
  q_lora: false
  lora_r: 32
  lora_alpha: 64
  lora_dropout: 0.1
  lora_target_modules:
    - "q_proj"
    - "k_proj"
    - "v_proj"
    - "o_proj"
    - "gate_proj"
    - "up_proj"
    - "down_proj"