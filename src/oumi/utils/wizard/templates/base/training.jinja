{# Base training configuration #}
training:
  trainer_type: "{{ trainer_type | default('TRL_SFT') }}"
  per_device_train_batch_size: {{ per_device_train_batch_size | default(4) }}
  gradient_accumulation_steps: {{ gradient_accumulation_steps | default(8) }}
  learning_rate: {{ learning_rate | default(1.0e-04) }}
  num_train_epochs: {{ num_train_epochs | default(3) }}
{% if max_steps is defined %}
  max_steps: {{ max_steps }}
{% endif %}
{% if enable_gradient_checkpointing is defined %}
  enable_gradient_checkpointing: {{ enable_gradient_checkpointing }}
{% endif %}
{% if bf16 is defined %}
  bf16: {{ bf16 }}
{% endif %}
{% if fp16 is defined %}
  fp16: {{ fp16 }}
{% endif %}