{
  "name": "oumi-webchat-frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "dev:backend": "cd .. && source ~/.zshrc && conda activate oumi && python -m oumi.webchat.server --port 9000",
    "dev:full": "concurrently \"npm run dev:backend\" \"NEXT_PUBLIC_BACKEND_URL=http://localhost:9000 npm run dev -- -p 7860\" --names \"backend,frontend\" --prefix-colors \"blue,green\"",
    "build": "next build",
    "start": "next start",
    "lint": "next lint"
  },
  "dependencies": {
    "@types/d3": "^7.4.3",
    "d3": "^7.9.0",
    "lucide-react": "^0.344.0",
    "next": "15.5.2",
    "prismjs": "^1.30.0",
    "react": "^18.2.0",
    "react-d3-tree": "^3.6.6",
    "react-dom": "^18.2.0",
    "react-markdown": "^10.1.0",
    "rehype-highlight": "^7.0.2",
    "rehype-katex": "^7.0.1",
    "remark-gfm": "^4.0.1",
    "remark-math": "^6.0.0",
    "zustand": "^4.4.0"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.4.0",
    "concurrently": "^8.2.2",
    "eslint": "^8",
    "eslint-config-next": "15.5.2",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5"
  }
}
