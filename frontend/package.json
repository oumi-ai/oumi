{
  "name": "oumi-webchat-frontend",
  "version": "0.1.0",
  "description": "Chatterley - A cross-platform desktop application for conversing with AI models, powered by the Oumi AI platform",
  "author": "Benjamin Feuer",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "dev:backend": "cd .. && source ~/.zshrc && conda activate oumi && python -m oumi.webchat.server --port 9000",
    "dev:full": "concurrently \"npm run dev:backend\" \"NEXT_PUBLIC_BACKEND_URL=http://localhost:9000 npm run dev -- -p 7860\" --names \"backend,frontend\" --prefix-colors \"blue,green\"",
    "build": "npm run generate-configs && next build",
    "build:electron": "npm run generate-configs && ELECTRON_BUILD=true next build",
    "start": "next start",
    "lint": "next lint",
    "generate-configs": "node scripts/generate-configs.js",
    "download-python": "node scripts/download-python.js",
    "prepare-python": "npm run download-python",
    "electron:compile": "tsc electron/*.ts --outDir dist/electron --target es2020 --module commonjs --moduleResolution node --esModuleInterop --allowSyntheticDefaultImports --skipLibCheck",
    "electron:dev": "npm run generate-configs && npm run electron:compile && concurrently \"npm run dev\" \"node scripts/wait-for-next.js\"",
    "electron:debug": "node scripts/debug-electron.js",
    "electron:debug-build": "node scripts/debug-electron.js --build",
    "electron:build-debug": "npm run build:electron && npm run electron:compile && npm run electron:debug",
    "electron:pack": "npm run prepare-python && npm run build:electron && npm run electron:compile && electron-builder",
    "electron:dist": "npm run prepare-python && npm run build:electron && npm run electron:compile && electron-builder --publish=never",
    "electron:publish": "npm run prepare-python && npm run build:electron && npm run electron:compile && electron-builder --publish=always",
    "electron:build:mac": "npm run prepare-python && npm run build:electron && npm run electron:compile && electron-builder --mac",
    "electron:build:win": "npm run prepare-python && npm run build:electron && npm run electron:compile && electron-builder --win",
    "electron:build:linux": "npm run prepare-python && npm run build:electron && npm run electron:compile && electron-builder --linux",
    "electron:build:all": "npm run prepare-python && npm run build:electron && npm run electron:compile && electron-builder --mac --win --linux",
    "dist:mac": "npm run electron:build:mac",
    "dist:win": "npm run electron:build:win",
    "dist:linux": "npm run electron:build:linux",
    "dist:all": "npm run electron:build:all",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@types/d3": "^7.4.3",
    "d3": "^7.9.0",
    "electron-log": "^5.4.3",
    "electron-store": "^8.2.0",
    "electron-updater": "^6.6.2",
    "js-yaml": "^4.1.0",
    "lucide-react": "^0.344.0",
    "next": "14.2.15",
    "prismjs": "^1.30.0",
    "react": "^18.2.0",
    "react-d3-tree": "^3.6.6",
    "react-dom": "^18.2.0",
    "react-markdown": "^10.1.0",
    "rehype-highlight": "^7.0.2",
    "rehype-katex": "^7.0.1",
    "remark-gfm": "^4.0.1",
    "remark-math": "^6.0.0",
    "zustand": "^4.5.7"
  },
  "devDependencies": {
    "@electron/notarize": "^3.0.2",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.4.0",
    "buffer": "^6.0.3",
    "concurrently": "^8.2.2",
    "electron": "^32.2.7",
    "electron-builder": "^26.0.12",
    "electron-packager": "^17.1.2",
    "eslint": "^8",
    "eslint-config-next": "14.2.15",
    "postcss": "^8.4.0",
    "process": "^0.11.10",
    "string-replace-loader": "^3.2.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5",
    "wait-on": "^8.0.4"
  },
  "main": "dist/electron/main.js",
  "build": {
    "appId": "ai.oumi.chatterley",
    "productName": "Chatterley",
    "icon": "assets/icon",
    "directories": {
      "output": "dist/packages",
      "buildResources": "build"
    },
    "files": [
      "dist/electron/**/*",
      "out/**/*",
      "node_modules/**/*",
      "!node_modules/.cache",
      "!node_modules/electron",
      "!node_modules/electron-builder",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "extraResources": [
      {
        "from": "python-dist/",
        "to": "python-dist/",
        "filter": [
          "**/*",
          "!**/*.tar.gz",
          "!**/temp-*"
        ]
      },
      {
        "from": "../src/oumi/",
        "to": "python/oumi/",
        "filter": [
          "**/*.py",
          "**/*.yaml",
          "**/*.json",
          "**/*.txt",
          "!**/__pycache__/**",
          "!**/*.pyc",
          "!**/*.pyo",
          "!**/test/**",
          "!**/tests/**"
        ]
      },
      {
        "from": "../configs/",
        "to": "python/configs/",
        "filter": [
          "**/*.yaml",
          "**/*.json",
          "**/*.md"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "assets/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "title": "Chatterley ${version}",
      "format": "ULFO"
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "verifyUpdateCodeSignature": false
    },
    "linux": {
      "icon": "assets/icon.png",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "installerHeaderIcon": "assets/icon.ico",
      "deleteAppDataOnUninstall": true,
      "runAfterFinish": true,
      "shortcutName": "Chatterley"
    },
    "appImage": {},
    "deb": {
      "category": "office"
    },
    "rpm": {},
    "publish": [
      {
        "provider": "github",
        "owner": "oumi-ai",
        "repo": "oumi-chat-desktop"
      }
    ],
    "afterSign": "scripts/notarize.js",
    "compression": "maximum",
    "artifactName": "Chatterley-${version}-${os}-${arch}.${ext}"
  }
}
